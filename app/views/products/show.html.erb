<h2 class="text-center mt-4"><%= @product.name %></h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mt-4 mb-3">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header fst-italic">
          creato da <%= @product.user.username if @product.user %>
          <%= link_to gravatar_for(@product.user), @product.user if @product.user %>
          <% if @product.categories.any? %>
            <div class="mt-2"><%= render @product.categories %></div>
          <% end %>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@product.description) %></div>
          <p class="card-text text-start"><%= "#{@product.price} â‚¬" %></p>
          <% if logged_in? && (@product.user == current_user || current_user.admin?) %>
            <%= link_to "Modifica", edit_product_path(@product), class: "btn btn-outline-info" %>
            <%= link_to "Elimina", @product, class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Sei sicuro?" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


