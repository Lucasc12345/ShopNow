<div class="container">
  <%= form_with(model: product) do |form| %>
    <%= render "shared/errors", obj: product %>

    <div class="row justify-content-center shadow p-3 mb-3 bg-warning rounded">
      <div class="col-12 col-md-10 col-lg-8">
        <div class="form-group row">
          <%= form.label :name, "Nome", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Nome del prodotto" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, "Descrizione", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Descrizione del prodotto" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :price, "Prezzo", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :price, class: "form-control shadow rounded", placeholder: "Prezzo del prodotto" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :category, "Categoria", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Seleziona una categoria o salta questo passaggio." }, { multiple: true, size: 3, class: "custom-select form-control shadow rounded" }) %>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-auto">
            <%= form.submit "Crea prodotto", class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-3 mb-3">
      <div class="col-auto">
        <%= link_to '[ Torna ai prodotti ]', products_path, class: "link-personalizzato" %>
      </div>
    </div>

  <% end %>
</div>



