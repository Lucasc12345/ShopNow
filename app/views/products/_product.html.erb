<div class="container ">
  <% @products.each do |product| %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 mt-4 mb-3">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            <% if product.user %>
              by <%= link_to product.user.username, product.user, class: "link-personalizzato" %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to product.name, product, class: "text-success link-personalizzato" %></h5>
            <p class="card-text"><%= truncate(product.description, length: 50) %></p>
            <p class="card-text"><%= "#{product.price} â‚¬" %></p>
            <%= link_to "View", product, class: "btn btn-outline-success" %>
            <% if logged_in? && (product.user == current_user || current_user.admin?) %>
              <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-info" %>
              <%= link_to "Delete", product, class: "btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <% end %>
          </div>
          <div class="card-footer text-body-secondary">
            <small>Created <%= time_ago_in_words(product.created_at) %> ago, Edited <%= time_ago_in_words(product.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


