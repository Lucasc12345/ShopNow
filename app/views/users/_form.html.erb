<div class="container">
  <%= form_with(model: user) do |form| %>
    <%= render "shared/errors", obj: user %>
    <div class="row spazio-sopra justify-content-center shadow p-3 mb-3 bg-warning rounded">
      <div class="col-10">
        <div class="form-group row">
          <%= form.label :username, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"  %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email"  %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password"  %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-auto">
            <%= form.submit(user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-auto">
        <%= link_to '[ Back to products ]', products_path, class: "link-personalizzato" %>
      </div>
    </div>
  <% end %>
</div>
