<div class="container">
  <%= form_with(model: user) do |form| %>
    <%= render "shared/errors", obj: user %>

    <div class="row justify-content-center shadow p-3 mb-3 bg-warning rounded">
      <div class="col-12 col-md-10 col-lg-8 form-container">
        <div class="form-group row">
          <%= form.label :username, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Inserisci un username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Inserisci una email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Scegli una password" %>
          </div>
        </div>

        <div class="row justify-content-center mt-3">
          <div class="col-auto">
            <%= form.submit(user.new_record? ? "Registrati" : "Aggiorna account", class: "btn btn-outline-light btn-lg") %>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-3 mb-3">
      <div class="col-auto">
        <%= link_to '[ Torna ai prodotti ]', products_path, class: "link-personalizzato" %>
      </div>
    </div>

  <% end %>
</div>




