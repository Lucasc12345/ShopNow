<h1 class="text-center mt-4">Profilo di <%= @user.username %></h1>
<%= gravatar_for(@user, size: 200) %>
<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Modifica il tuo profilo", edit_user_path(@user), class: "btn btn-info" %>
  </div>
<% end %>
<h3 class="text-center mt-4">Prodotti</h3>
<div class="apple_pagination">
  <%= will_paginate @products, previous_label: "<- Indietro", next_label: "Avanti ->", :container => false %>
</div>
<%= render "products/product" %>
<div class="apple_pagination mb-4">
  <%= will_paginate @products, previous_label: "<- Indietro", next_label: "Avanti ->", :container => false %>
</div>
