<% content_for :title, "User page" %>

<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for(@user, size: 200) %>

<% if logged_in? && @user == current_user%>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class:"btn btn-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Products</h3>

<div class="apple_pagination">
  <%= will_paginate @products, :container => false %>
</div>

<%= render "products/product" %>

<div class="apple_pagination mb-4">
  <%= will_paginate @products, :container => false %>
</div>