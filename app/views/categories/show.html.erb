<h1 class="text-center mt-4">Categoria: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Modifica il nome della categoria", edit_category_path(@category), class: "btn btn-info" %>
    <%= link_to "Elimina la categoria", @category, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Sei sicuro?" } %>
  </div>
<% end %>

<h3 class="text-center mt-4">Prodotti</h3>

<div class="apple_pagination">
  <%= will_paginate @products, previous_label: "<- Indietro", next_label: "Avanti ->", container: false %>
</div>

<%= render "products/product" %>

<div class="apple_pagination mb-4">
  <%= will_paginate @products, previous_label: "<- Indietro", next_label: "Avanti ->", container: false %>
</div>

