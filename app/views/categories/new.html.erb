<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <%= form_with(model: @category) do |form| %>
    <%= render "shared/errors", obj: @category %>
    <div class="row spazio-sopra justify-content-center shadow p-3 mb-3 bg-warning rounded">
      <div class="col-10">
        <div class="form-group row">
          <%= form.label :name, "Category name", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name"  %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-auto">
            <%= form.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-auto">
        <%= link_to '[ Back to products ]', products_path, class: "link-personalizzato" %>
      </div>
    </div>
  <% end %>
</div>