<%= form_with(model: @category) do |form| %>
  <div class="form-group row">
    <%= form.label :name, "Nome categoria", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Inserisci un nome" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-auto">
      <%= form.submit "Crea categoria", class: "btn btn-outline-light btn-lg" %>
    </div>
  </div>
<% end %>