<h1 class="text-center mt-4">Categories</h1>

<div class="apple_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 mt-4 mb-3">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category, class: "text-success link-personalizzato" %></h5>
            <p class="card-text"><%= pluralize(category.products.count, "product") %></p>
          </div>
          <div class="card-footer text-body-secondar">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago, Edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="apple_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>