<h1 class="text-center mt-4">Categorie</h1>

<div class="apple_pagination">
  <%= will_paginate @categories, previous_label: "<- Indietro", next_label: "Avanti ->", container: false %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 mt-4 mb-3">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to category.name, category, class: "text-success link-personalizzato" %>
            </h5>
            <p class="card-text">
              <%= category.products.count == 1 ? "#{category.products.count} prodotto" : "#{category.products.count} prodotti" %>
            </p>
            <%= link_to "Vedi", category, class: "btn btn-outline-success" %>
            <% if logged_in? && current_user.admin? %>
              <%= link_to "Modifica", edit_category_path(category), class: "btn btn-outline-info" %>
              <%= link_to "Elimina", category, class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Sei sicuro?" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="apple_pagination mb-4">
  <%= will_paginate @categories, previous_label: "<- Indietro", next_label: "Avanti ->", container: false %>
</div>
